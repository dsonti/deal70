#macro (ajaxrequest $component $url $type $method)
	<script>
		$(document).ready(function(){
			$("${component}").click(function(){
				$.ajax({
					url: "${url}",
					type: "${type}",
					success: $method
				});
			});
		});
	</script>
#end

#macro (addReCaptch $div)
	Recaptcha.create("${captchaPublicKey}",
		"$div",
		{
		      theme: "clean",
		      callback: Recaptcha.focus_response_field
		}
	);
#end

